<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- ScrollView pro zobrazení zpráv -->
    <ScrollView
        android:id="@+id/chatScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <!-- Kontejner pro zprávy -->
        <LinearLayout
            android:id="@+id/chatMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Vstupní pole pro psaní zpráv -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_background"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Tlačítko pro emoji -->
        <ImageButton
            android:id="@+id/emojiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_emoji"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Vyber emoji"
            android:tint="#888" />

        <!-- Textové pole pro psaní zprávy -->
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Napiš zprávu..."
            android:background="@null"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp" />

        <!-- Tlačítko odeslání zprávy -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_send"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Odeslat zprávu"
            android:tint="#0078FF" />
    </LinearLayout>

</LinearLayout>
